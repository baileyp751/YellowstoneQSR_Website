---
const siteTitle = "YellowstoneQSR";
---

<header>
  <nav>
    <a href="/" class="brand">{siteTitle}</a>
  </nav>
</header>

<style>
  header {
    background: var(--surface);
    border-bottom: 1px solid var(--border);
  }

  nav {
    height: 60px;
    display: flex;
    align-items: center;
    justify-content: center;
    max-width: 100%;
  }

  .brand {
    font-size: 1.25rem;
    font-weight: 700;
    color: var(--text);
    text-decoration: none;
    letter-spacing: 0.3px;
  }

  .brand:hover {
    color: var(--accent);
  }
</style>
