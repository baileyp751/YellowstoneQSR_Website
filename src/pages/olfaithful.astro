---
import BaseHead from '../components/BaseHead.astro';
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <BaseHead title="Old Faithful Live Stream" description="Live view of the Old Faithful geyser." />
    <style>
      html, body {
        margin: 0;
        padding: 0;
        background: black;
        height: 100%;
        width: 100%;
        overflow: hidden;
      }

      iframe {
        position: fixed;
        top: 0;
        left: 0;
        width: 100vw;
        height: 100vh;
        border: none;
        z-index: 9999;
      }
    </style>
  </head>
  <body>
    <iframe 
      src="https://www.yellowstone.org/old-faithful-streaming-webcam/" 
      allowfullscreen 
      allow="autoplay"
      loading="eager"
      ></iframe>
  </body>
</html>
