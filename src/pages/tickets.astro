---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead title={`${SITE_TITLE} | Tickets`} description={SITE_DESCRIPTION} />
  </head>
  <body>
    <Header />

    <main style="max-width: 900px; margin: 0 auto; padding: 2rem;">
      <section class="card" style="text-align: center;">
        <h1 style="margin-bottom: 0.25rem;">Select which type of issue you have</h1>
        <p style="margin-top: 0.5rem;">
          Choose the form that matches what you need.
        </p>

        <div class="tile-grid">
          <a
            class="tile"
            href="https://nocodb.yellowstoneqsr.org/dashboard/#/nc/form/92006894-0d88-4e77-af78-4f7490de17ae"
            target="_blank"
            rel="noopener noreferrer"
          >
            <h2>
              <span>Maintenance</span>
              <span>Ticket</span>
            </h2>
          </a>

          <a
            class="tile"
            href="https://nocodb.yellowstoneqsr.org/dashboard/#/nc/form/18c7ba12-9644-4224-933f-ebabd53f600c"
            target="_blank"
            rel="noopener noreferrer"
          >
            <h2>
              <span>Technology</span>
              <span>Ticket</span>
            </h2>
          </a>

          <a
            class="tile"
            href="https://nocodb.yellowstoneqsr.org/dashboard/#/nc/form/9832dba6-826d-4382-8e7f-1fed33678322"
            target="_blank"
            rel="noopener noreferrer"
          >
            <h2>
              <span>PTO</span>
              <span>Request</span>
            </h2>
          </a>
        </div>

        <div style="margin-top: 1.5rem;">
          <a class="tile tile--single" href="/">
  <h2>
    <span>Home</span>
    <span>&nbsp;</span>
  </h2>
</a>

        </div>
      </section>
    </main>

    <Footer />
  </body>
</html>
