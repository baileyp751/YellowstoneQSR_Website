---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead title={`${SITE_TITLE} | Tickets`} description={SITE_DESCRIPTION} />
  </head>
  <body>
    <Header />

    <main style="max-width: 900px; margin: 0 auto; padding: 2rem;">
      <section class="card" style="text-align:center;">
        <h1 style="margin-bottom: .25rem;">Select which type of issue you have</h1>
        <p style="margin-top: 0.5rem;">
          Choose the form that matches what you need.
        </p>

        <div class="tile-grid">
          <a class="tile" href="https://nocodb.yellowstoneqsr.org/dashboard/#/nc/form/84c39584-e720-47f9-9651-0ed6d461faed" target="_blank" rel="noopener noreferrer">
            <h2>Maintenance Ticket</h2>
          </a>

          <a class="tile" href="https://nocodb.yellowstoneqsr.org/dashboard/#/nc/form/024d1f31-34d4-4dea-9bde-dc14a9713165" target="_blank" rel="noopener noreferrer">
            <h2>Technology Ticket</h2>
          </a>

          <a class="tile" href="https://nocodb.yellowstoneqsr.org/dashboard/#/nc/form/9832dba6-826d-4382-8e7f-1fed33678322" target="_blank" rel="noopener noreferrer">
            <h2>PTO Request</h2>
          </a>
        </div>

        <div style="margin-top: 1.5rem;">
          <a class="btn" href="/">Home</a>
        </div>
      </section>
    </main>

    <Footer />
  </body>
</html>
